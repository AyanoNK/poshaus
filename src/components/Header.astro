---
const { pathname } = Astro.url;

function pathGenerator(path) {
  return pathname.includes(path) ? "#" : `/${path}`;
}
const navbar = [
  { name: "Main", link: "/" },
  {
    name: "Illustrations",
    link: pathGenerator("illustrations"),
  },
  { name: "Tattoos", link: pathGenerator("tattoos") },
  { name: "Other", link: pathGenerator("other") },
  { name: "Store", link: pathGenerator("store") },
];
---

<div id="navbar">
  <a href="/">
    <img src="/img/logo.png" id="navbar-logo" alt="navbar-logo" />
  </a>
  <span>Casita</span>
  <!-- <img src="/svg/github.svg" alt="hamburger-house" id="hamburger-house" /> -->
</div>
<style>
  #navbar {
    position: fixed;
    top: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    box-sizing: border-box;
    padding: 0 5rem;
    height: 5rem;
    background: linear-gradient(180deg, #c4e9df, transparent);
    z-index: 2;
  }

  #navbar a {
    text-decoration: none;
    color: #000;
    padding-right: 2rem;
  }

  #navbar-logo {
    height: 3rem;
  }
  #hamburger-house {
    height: 3rem;
    width: 3rem;
  }

  @media (max-width: 768px) {
    #navbar {
      padding: 0 1rem;
    }
  }
</style>
