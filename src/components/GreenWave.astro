---
interface Props {
  invert?: boolean;
  class?: string;
}

const { invert } = Astro.props;

const transformValue = invert ? "scaleY(-1)" : "scaleY(1)";
---

<div
  id="green-wave-container"
  class={`w-full overflow-hidden ${Astro.props.class}`}
>
  <div id="green-wave"></div>
</div>
<style define:vars={{ transformValue }}>
  #green-wave {
    background: url("/svg/footer_wave.svg") repeat-x;
    width: 5760px;
    height: 150px;
    animation: wave 8s linear infinite;
    transform: translate3d(0, 0, 0);
    transform: var(--transformValue);
  }
  @keyframes wave {
    0% {
      margin-left: 0;
    }
    100% {
      margin-left: -1920px;
    }
  }
</style>
