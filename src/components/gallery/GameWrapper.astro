---
import GameGrid from "./GameGrid.astro";

interface IGame {
  link: string;
  logo: string;
  concept: string;
}

interface Props {
  title: string;
  columns: IGame[];
}

const { title, columns } = Astro.props;
---

<div class="gallery-wrapper">
  <h1 class="title">
    {title}
  </h1>
  <h2>
    To play the games visit our <a
      class="itchio"
      href="https://studio904.itch.io/"
      target="_blank">itch.io</a
    >
    page or click on the name of the project
  </h2>
  <GameGrid columns={columns} />
  <style>
    .gallery-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      width: 100%;
      margin: 0;
      padding: 0;
    }
  </style>
</div>
<style>
  h2 {
    font-weight: 600;
    text-align: center;
  }
  .itchio {
    color: #47a39f;
  }
</style>
