---
const { pathname } = Astro.url;
---

<div id="header">
  <div class="wave-container">
    <div class="wave"></div>
  </div>
  <div id="content-container">
    <div class="content">
      <a href="/">
        <img src="/img/logo.png" id="navbar-logo" alt="navbar-logo" />
      </a>
      <span>Casita</span>
    </div>
  </div>
</div>

<style>
  #header {
  }

  #content-container {
    display: flex;
    box-sizing: border-box;
    width: 100%;
    z-index: 1;
    padding: 0 1rem;
  }

  .content {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 2rem;
  }

  #navbar-logo {
    height: 3rem;
  }

  .wave-container {
    position: absolute;
    width: 100%;
    overflow: hidden;
    z-index: -1;
  }
  .wave {
    background: url("/svg/header_wave.svg") repeat-x;
    width: 5760px;
    height: 300px;
    animation: wave 6s linear infinite;
    transform: translate3d(0, 0, 0);
  }

  @media (min-width: 768px) {
    #content-container {
      padding: 0 5rem;
    }
  }

  @keyframes wave {
    0% {
      margin-left: 0;
    }
    100% {
      margin-left: -1920px;
    }
  }
</style>
