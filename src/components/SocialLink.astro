---
export interface Props {
  href: string;
  svg: string;
  alt: string;
}

const { href, svg, alt, ...props } = Astro.props as Props;
---

<a href={href} class="social-card" target="_blank">
  <img src={svg} alt={alt} {...props} />
</a>
<style>
  :root {
    --link-gradient: scale(1.05);
    --square-rem: 2.75rem;
  }

  img {
    width: var(--square-rem);
    height: var(--square-rem);
  }

  .social-card {
    display: block;
    background-color: transparent;
    color: #ffffff;
    text-align: center;
    padding: 0.625rem;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.25s cubic-bezier(0.08, 0.59, 0.29, 0.99);
    border: solid #ffffff 1px;
  }

  .social-card:not(:last-child) {
    margin-right: 0.25rem;
  }

  .social-card:is(:hover) {
    background-position: 0;
    background-color: #ffffff;
    color: #4f39fa;
    will-change: transform;
    transform: scale(1.05);
  }
</style>
