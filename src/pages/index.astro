---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";
import SocialLink from "../components/SocialLink.astro";

const social = [
  {
    name: "instagram",
    url: "https://www.instagram.com/poshaus/",
  },
  {
    name: "behance",
    url: "https://www.behance.net/poshaus",
  },
  {
    name: "twitter",
    url: "https://twitter.com/DrColdy",
  },
  {
    name: "email",
    url: "mailto:jr.chand204@gmail.com",
  },
];
---

<Layout title="Poshaus">
  <div id="vimeo_background">
    <video width="640" height="360" autoplay muted loop>
      <source src="/video/video.webm" type="video/webm" />
      <source src="/video/video.mp4" type="video/mp4" />
    </video>
  </div>
  <main id="container">
    <div class="content">
      <img src="/svg/logo.svg" alt="Poshaus" id="logo" />
      <div id="links">
        <Link href="#" title="Illustration" />
        <Link href="#" title="Tattoo designs" />
        <Link href="#" title="Other" />
        <Link href="#" title="Store" />
        <div id="social">
          {
            social.map((link) => (
              <SocialLink
                href={link.url}
                svg={`/svg/${link.name}.svg`}
                alt={link.name}
              />
            ))
          }
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
  }

  #logo {
    margin: 2rem 0;
    width: 100%;
    height: auto;
  }

  main {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    width: 100%;
  }

  #vimeo_background {
    left: 0;
    height: 100%;
    position: fixed;
    pointer-events: none;
    overflow: hidden;
    top: 0;
    width: 100%;
    z-index: -1;
  }

  #vimeo_background video {
    width: 100vw;
    height: 56.25vw;
    min-height: 150vh;
    min-width: 227.77vh;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  #social {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }
</style>
