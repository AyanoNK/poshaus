---
import GalleryLayout from "../layouts/GalleryLayout.astro";
---

<GalleryLayout title="HIDDEN TICKET">
  <div
    class="group z-10 w-[300px] select-none md:w-[800px]"
    style="perspective:1500px"
  >
    <div
      class="relative isolate z-10 overflow-hidden rounded-xl border border-white/20 transition-transform duration-200 ease-out"
      style="transform-style:preserve-3d;transform:rotateY(0deg) rotateX(0deg) scale(1)"
    >
      <div
        class="absolute inset-0 z-10 opacity-0 mix-blend-color-dodge transition-opacity duration-300 ease-in-out group-hover:opacity-50"
      >
        <div
          class="absolute inset-0 bg-cover bg-center opacity-20"
          style="background-image:url()"
        >
        </div><div
          class="absolute inset-0 left-1/2 top-1/2 h-[160%] w-[160%] -translate-x-1/2 -translate-y-1/2 opacity-20 mix-blend-hue"
          style="background:linear-gradient(135deg, rgb(255, 119, 115) 2%, rgb(255, 237, 95) 12.9661%, rgb(168, 255, 95) 23.5922%, rgb(131, 255, 247) 39.1029%, rgb(119, 221, 223) 48.545%, rgb(120, 148, 255) 59.1618%, rgb(209, 124, 242) 62.9954%, rgb(255, 119, 115) 76.7431%)"
        >
        </div><div
          class="absolute inset-0 left-1/2 top-1/2 h-[160%] w-[160%] -translate-x-1/2 -translate-y-1/2 opacity-50 mix-blend-plus-lighter"
          style="background:linear-gradient(315deg, rgb(19, 20, 21) 0%, rgb(143, 163, 163) 6.03181%, rgb(162, 163, 163) 9.74451%, rgb(20, 20, 20) 25.0721%, rgb(143, 163, 163) 33.5357%, rgb(164, 166, 166) 35.2988%, rgb(37, 37, 38) 41.503%, rgb(161, 161, 161) 52.393%, rgb(124, 125, 125) 61.1346%, rgb(19, 20, 21) 66.269%, rgb(166, 166, 166) 74.4633%, rgb(163, 163, 163) 79.8987%, rgb(19, 20, 21) 85.7299%, rgb(161, 161, 161) 89.8948%, rgb(19, 20, 21) 100%)"
        >
        </div><div
          class="absolute inset-0 mix-blend-overlay blur-xl"
          style="background:radial-gradient(50% 50% at 50% 50%, rgb(255, 255, 255) 0%, rgba(255, 255, 255, 0.5) 43.6638%, rgba(255, 255, 255, 0.11) 80.5409%, rgba(255, 255, 255, 0) 100%);transform:translate(0px, 0px)"
        >
        </div>
      </div><div class="contrast-[1.05]">
        <img
          src="https://remix.run/assets/general-CFnhvhhh.avif"
          width="800"
          height="280"
          alt="Remix Jam 2025 Event Ticket"
          class="relative w-full"
        />
      </div>
      <div
        class="absolute bottom-0 left-[35%] z-40 pb-1 pl-2 text-left font-conf-mono text-[8px] text-white md:pb-4 md:pl-6 md:text-base"
      >
        <div class="flex flex-col gap-0 uppercase md:gap-2">
          <p>october 10 2025</p><div><p>your name</p><p>your company</p></div><p
            class="uppercase text-[#36d3ff]"
          >
            Early Bird
          </p>
        </div>
      </div>
    </div>
  </div>
</GalleryLayout>
